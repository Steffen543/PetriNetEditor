<Window x:Class="Petri.Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Petri.Editor"
        xmlns:editor="clr-namespace:Petri.Editor.UI.Editor"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="Neu" />
            <MenuItem Header="Öffnen" Click="OpenPetriNet" />
            <MenuItem Header="Speichern" Click="SavePetriNet" />
        </Menu>
        <editor:PetriNetEditor x:Name="PetriEditor" Grid.Row="1"></editor:PetriNetEditor>
    </Grid>
</Window>
