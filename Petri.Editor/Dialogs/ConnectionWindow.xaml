<Window x:Class="Petri.Editor.Dialogs.ConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Petri.Editor.Dialogs"
        xmlns:controls="clr-namespace:Petri.Editor.Controls"
        mc:Ignorable="d"
        Title="ConnectionWindow" Height="250" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Beschreibung" />
        <TextBox Text="{Binding Description}" Padding="4" Margin="0,3,0,0" />
        <TextBlock Text="Wert" />
        <controls:NumericTextBox Text="{Binding Value}" x:Name="ValueTextBox" Padding="4" Margin="0,3,0,0" />
        <Button Click="Button_Click" Content="Bestätigen" IsDefault="True" HorizontalAlignment="Center" Margin="0,5,0,0"  />
    </StackPanel>
</Window>
