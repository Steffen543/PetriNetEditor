<Window x:Class="Petri.Editor.Dialogs.ConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Petri.Editor.Dialogs"
        mc:Ignorable="d"
        Title="ConnectionWindow" Height="250" Width="400">
    <StackPanel>
        <TextBlock Text="Beschreibung" />
        <TextBox Text="{Binding Description}" />
        <TextBlock Text="Wert" />
        <TextBox Text="{Binding Value}" />
        <Button Click="Button_Click" Content="Bestätigen" IsDefault="True" />
    </StackPanel>
</Window>
